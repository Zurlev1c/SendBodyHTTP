Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	Тарифы.Код КАК Код,
	               |	Тарифы.Наименование КАК Наименование
	               |ИЗ
	               |	Справочник.Тарифы КАК Тарифы";
	Выборка = Запрос.Выполнить().Выбрать();
	Массив = Новый Массив;
	Пока Выборка.Следующий() цикл
		
		ОписаниеОбъекта = Новый Структура("Код");
		ОписаниеОбъекта.Вставить("Наименование");
		ОписаниеОбъекта.Код = Строка(Выборка.Код);
		ОписаниеОбъекта.Наименование = Строка(Выборка.Наименование);
		Массив.Добавить(ОписаниеОбъекта);
	КонецЦикла;
		JsonФайл = ЗаписьВJSON(Массив,"Test");
               
   
           Ответ = JsonФайл;
   
			HTTPОтвет = Новый HTTPСервисОтвет(200);
    		HTTPОтвет.УстановитьТелоИзСтроки(Ответ);
      Возврат HTTPОтвет;

Функция ЗаписьВJSON(Массив,ИмяФайла)
	ЗаписьJSON = Новый ЗаписьJSON; 
	ЗаписьJSON.УстановитьСтроку();
	
	
	ЗаписатьJSON(ЗаписьJSON,Массив);
	Ответ = ЗаписьJSON.Закрыть();
	Возврат  Ответ;
	
	
	
	
КонецФункции

